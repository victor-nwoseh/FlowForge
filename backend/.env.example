# Environment: development | production
NODE_ENV=development

# Port where the NestJS backend listens
PORT=3001

# MongoDB connection URI
MONGODB_URI=mongodb://localhost:27017/flowforge

# Redis configuration for Bull queues and caching
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT configuration for authentication tokens
JWT_SECRET=your-secret-key
JWT_EXPIRES_IN=7d

# Slack incoming webhook URL for Slack node notifications
SLACK_WEBHOOK_URL=

# SMTP configuration for email handler (defaults: smtp.gmail.com:587)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=

# Google Sheets service account credentials (private key should include \n)
GOOGLE_SHEETS_CLIENT_EMAIL=
GOOGLE_SHEETS_PRIVATE_KEY=

# Public base URL exposed for webhook triggers (e.g., ngrok URL)
WEBHOOK_BASE_URL=

# 32-character encryption key for OAuth token storage. Generate with: openssl rand -hex 16
ENCRYPTION_KEY=

# OAuth configuration
# Get from https://api.slack.com/apps - create new app, OAuth & Permissions section
SLACK_CLIENT_ID=
SLACK_CLIENT_SECRET=
# Must match exactly in OAuth app settings
SLACK_REDIRECT_URI=
# Get from https://console.cloud.google.com/apis/credentials - OAuth 2.0 Client IDs
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# Must match exactly in OAuth app settings
GOOGLE_REDIRECT_URI=
# Frontend base URL for redirect handling
FRONTEND_URL=

